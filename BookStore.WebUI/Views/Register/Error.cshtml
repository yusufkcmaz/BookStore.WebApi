@{
    Layout = "~/Views/Shared/_BookLayout.cshtml"; // Tema layout'unu çağırıyoruz
    ViewData["Title"] = "Hata"; // Tarayıcı sekmesinde görünür
}

<!-- Sayfanın ortasına şık bir hata kutusu yerleştiriyoruz -->
<div class="d-flex justify-content-center align-items-center" style="min-height: 80vh;">
    <div class="card shadow p-4 text-center" style="max-width: 500px; width: 100%; border-radius: 16px;">

        <!-- Hata ikonu ve başlık -->
        <h3 class="text-danger mb-3">
            <i class="bi bi-x-circle-fill" style="font-size: 2rem;"></i><br />
            Bir hata oluştu!
        </h3>

        <!-- Açıklama -->
        <p class="text-muted">
            İşlem sırasında bir sorun oluştu. Lütfen tekrar deneyiniz.
        </p>

        <!-- Geri yönlendirme butonu -->
        <a href="@Url.Action("Register", "Register")" class="btn btn-secondary mt-3 px-4">
            Kayıt Ol Sayfasına Dön
        </a>
    </div>
</div>
