@{
    Layout = "~/Views/Shared/_BookLayout.cshtml"; 
    ViewData["Title"] = "Email Onayı Başarılı"; 
}

<!-- Sayfanın ortasına şık bir kart koyuyoruz -->
<div class="d-flex justify-content-center align-items-center" style="min-height: 80vh;">
    <div class="card shadow p-4" style="max-width: 500px; width: 100%; border-radius: 16px;">

        <!-- Başlık kısmı -->
        <h3 class="text-center mb-3 text-success">
            <i class="bi bi-check-circle-fill"></i> <!-- Bootstrap ikonu (istersen CDN ile ekleyebilirsin) -->
            Email adresiniz başarıyla onaylandı!
        </h3>

        <!-- Açıklama paragrafı -->
        <p class="text-center text-muted">
            Artık hesabınıza giriş yapabilirsiniz.
        </p>

        <!-- Giriş yap butonu -->
        <div class="text-center">
            <a href="@Url.Action("_DefaultUI", "Index")" class="btn btn-primary px-4 mt-3">Giriş Yap</a>
        </div>
    </div>
</div>
