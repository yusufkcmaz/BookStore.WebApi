@using BookStore.WebUI.Dtos.AdminProfileDtos
@model AdminProfileDto

@{
    ViewData["Title"] = "Profilim";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
}

<div class="page-inner">
    <div class="page-header mb-4">
        <h4 class="page-title">Profilim</h4>
        <ul class="breadcrumbs">
            <li class="nav-home">
                <a href="/Admin/Dashboard">
                    <i class="fas fa-home"></i>
                </a>
            </li>
            <li class="separator">
                <i class="fas fa-chevron-right"></i>
            </li>
            <li class="nav-item">
                Profilim
            </li>
        </ul>
    </div>

    @if (TempData["Message"] != null)
    {
        <div class="alert alert-success">
            @TempData["Message"]
        </div>
    }

    <form asp-action="Index" method="post">
        <div class="row">
    
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header bg-primary text-white">
                        <h5 class="card-title mb-0"><i class="fas fa-user"></i> Kişisel Bilgiler</h5>
                    </div>
                    <div class="card-body">
                        <div class="form-group">
                            <label>Ad</label>
                            <input asp-for="Name" class="form-control" placeholder="Adınız" />
                            <span asp-validation-for="Name" class="text-danger small"></span>
                        </div>

                        <div class="form-group">
                            <label>Soyad</label>
                            <input asp-for="Surname" class="form-control" placeholder="Soyadınız" />
                            <span asp-validation-for="Surname" class="text-danger small"></span>
                        </div>

                        <div class="form-group">
                            <label>Email</label>
                            <input asp-for="Email" class="form-control" placeholder="Email adresiniz" />
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>

                        <div class="form-group">
                            <label>Fotoğraf URL</label>
                            <input asp-for="ImageUrl" class="form-control" placeholder="Profil fotoğraf URL" />
                            <span asp-validation-for="ImageUrl" class="text-danger small"></span>
                        </div>
                    </div>
                </div>
            </div>

        
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header bg-secondary text-white">
                        <h5 class="card-title mb-0"><i class="fas fa-key"></i> Şifre Değiştir</h5>
                    </div>
                    <div class="card-body">
                        <div class="form-group">
                            <label>Mevcut Şifre</label>
                            <input asp-for="CurrentPassword" type="password" class="form-control" placeholder="Mevcut şifre" />
                            <span asp-validation-for="CurrentPassword" class="text-danger small"></span>
                        </div>

                        <div class="form-group">
                            <label>Yeni Şifre</label>
                            <input asp-for="NewPassword" type="password" class="form-control" placeholder="Yeni şifre" />
                            <span asp-validation-for="NewPassword" class="text-danger small"></span>
                        </div>

                        <div class="form-group">
                            <label>Yeni Şifre (Tekrar)</label>
                            <input asp-for="ConfirmNewPassword" type="password" class="form-control" placeholder="Yeni şifre tekrar" />
                            <span asp-validation-for="ConfirmNewPassword" class="text-danger small"></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="text-end mt-4">
            <button type="submit" class="btn btn-success">
                <i class="fas fa-save"></i> Güncelle
            </button>
        </div>
    </form>
</div>
