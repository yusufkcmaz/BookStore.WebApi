@using BookStore.WebUI.Dtos.RoleDtos

@model List<ResultRoleDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
}

<div class="card shadow-sm mx-auto" style="max-width: 700px;">
    <div class="card-header bg-dark text-white">
        <h4 class="mb-0">Roller</h4>
    </div>
    <div class="card-body">

        <div class="alert alert-info">
            <h6 class="mb-0">
                Sitenin işleyişi açısından Rol isimleri şu şekilde olmalıdır:
                <strong>Admin, Manager, User</strong>
            </h6>
        </div>

        <table class="table table-bordered table-hover">
            <thead class="table-light">
                <tr>
                    <th style="width: 50px;">#</th>b vc
                    <th>Rol</th>
                    <th style="width: 120px;">Sil</th>
                    <th style="width: 120px;">Güncelle</th>
                </tr>
            </thead>
            <tbody>
                @{
                    int count = 0;
                }
                @foreach (var item in Model)
                {
                    count++;
                    <tr>
                        <td>@count</td>
                        <td>@item.Name</td>
                        <td>
                            <a asp-action="DeleteRole" asp-route-id="@item.Id" class="btn btn-sm btn-danger"
                               onclick="return confirm('Rolü silmek istediğinize emin misiniz?')">
                                <i class="fa fa-trash"></i> Sil
                            </a>
                        </td>
                        <td>
                            <a asp-action="UpdateRole" asp-route-id="@item.Id" class="btn btn-sm btn-info">
                                <i class="fa fa-pen"></i> Güncelle
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <a asp-action="CreateRole" asp-controller="Rol" asp-area="Admin" class="btn btn-primary mt-3">
            <i class="fa fa-plus"></i> Yeni Role Ekle
        </a>
    </div>
</div>

