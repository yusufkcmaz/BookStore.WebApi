@using BookStore.WebUI.Dtos.SubscribeDtos
@model List<ResultSubscribeDto>

@{
    ViewData["Title"] = "Aboneler";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
}

<div class="page-inner">
    <div class="page-header mb-4">
        <h4 class="page-title">
            <i class="fas fa-envelope text-primary"></i> Abone Listesi
        </h4>
        <ul class="breadcrumbs">
            <li class="nav-home">
                <a href="/Admin/Dashboard">
                    <i class="fas fa-home"></i>
                </a>
            </li>
            <li class="separator">
                <i class="fas fa-chevron-right"></i>
            </li>
            <li class="nav-item">
                Aboneler
            </li>
        </ul>
    </div>

    <div class="card shadow-sm">
        <div class="card-header bg-dark text-white">
            <h5 class="mb-0"><i class="fas fa-users"></i> Aboneler</h5>
        </div>
        <div class="card-body">
            <table class="table table-bordered table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>ID</th>
                        <th>Email</th>
                        <th>Abonelik Tarihi</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var sub in Model)
                    {
                        <tr>
                            <td>@sub.SubscribeId</td>
                            <td>@sub.Mail</td>
                            <td>@sub.SubcribeDate.ToString("dd.MM.yyyy HH:mm")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <div class="card shadow-sm mt-4">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0"><i class="fas fa-paper-plane"></i> Tüm Abonelere Mail Gönder</h5>
        </div>
        <div class="card-body">
            <form method="post" asp-action="SendsMail">
                <div class="mb-3">
                    <label class="form-label">Konu</label>
                    <input type="text" name="Subject" class="form-control" required />
                </div>
                <div class="mb-3">
                    <label class="form-label">İçerik</label>
                    <textarea name="Body" class="form-control" rows="6" required></textarea>
                </div>
                <div class="text-end">
                    <button type="submit" class="btn btn-success">
                        <i class="fas fa-paper-plane"></i> Gönder
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
