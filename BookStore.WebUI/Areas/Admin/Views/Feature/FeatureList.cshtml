@model List<BookStore.WebUI.Dtos.FeatureDtos.ResultFeatureDto>
@{
    ViewData["Title"] = "FeatureList";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
}

<h1>Ön kısım</h1>

<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container">
    <br />
    <table class="table table-bordered">
        <tr>
            <th>#</th>
            <th>YAZAR</th>
            <th>Ürün Görsel</th>
            <th>Ürün İsim</th>
            <th>Ürün Açıklama</th>
            <th>Sil</th>
            <th>Güncelle</th>

        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.FeatureId</td>
                <td>@item.ProductWriterName</td>
                <td>@item.ProductImageUrl</td>
                <td>@item.ProductName</td>
                <td>@item.ProductDescription</td>
                <td><a href="/Feature/DeleteFeature/@item.FeatureId" class="btn btn-danger">Sil</a></td>
                <td><a href="/Feature/UpdateFeature/@item.FeatureId" class="btn btn-success">Güncelle</a></td>

            </tr>
        }

    </table>
    <a href="/Admin/Feature/AddFeature/" class="btn btn-primary">Yeni ürün Girişi</a>

</div>

 