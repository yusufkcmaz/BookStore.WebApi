@model List<BookStore.WebUI.Dtos.CategoryDtos.ResultCategoryDto>

@{
    ViewData["Title"] = "Kategoriler";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
}

<div class="page-inner">
    <div class="page-header mb-4">
        <h4 class="page-title"><i class="fas fa-list-alt text-primary"></i> Kategoriler</h4>
        <ul class="breadcrumbs">
            <li class="nav-home">
                <a href="/Admin/Dashboard">
                    <i class="fas fa-home"></i>
                </a>
            </li>
            <li class="separator">
                <i class="fas fa-chevron-right"></i>
            </li>
            <li class="nav-item">
                Kategoriler
            </li>
        </ul>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h5 class="mb-0"><i class="fas fa-folder-open"></i> Kategori Listesi</h5>
                
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered table-hover align-middle">
                            <thead class="table-light">
                                <tr>
                                    <th style="width: 5%;">#</th>
                                    <th>Kategori Adı</th>
                                    <th style="width: 10%;">Sil</th>
                                    <th style="width: 10%;">Güncelle</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.CategoryID</td>
                                        <td>@item.CategoryName</td>
                                        <td>
                                            <a href="/Admin/Category/DeleteCategory/@item.CategoryID" class="btn btn-danger btn-sm">
                                                <i class="fas fa-trash-alt"></i>
                                            </a>
                                        </td>
                                        <td>
                                            <a href="/Admin/Category/UpdateCategory/@item.CategoryID" class="btn btn-success btn-sm">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="card-footer text-end">
                    <a href="/Admin/Category/CreateCategory/" class="btn btn-primary">
                        <i class="fas fa-plus"></i> Yeni Kategori
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
