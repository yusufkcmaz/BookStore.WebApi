@using BookStore.WebUI.Dtos.RoleDtos
@model List<RoleAssign>

@{
    ViewData["Title"] = "Rol Ata";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
}

<div class="page-inner">
    <div class="page-header mb-4">
        <h4 class="page-title">
            <i class="fas fa-user-cog text-primary"></i> Rol Atama
        </h4>
        <ul class="breadcrumbs">
            <li class="nav-home">
                <a href="/Admin/Dashboard">
                    <i class="fas fa-home"></i>
                </a>
            </li>
            <li class="separator">
                <i class="fas fa-chevron-right"></i>
            </li>
            <li class="nav-item">
                Rol Ata
            </li>
        </ul>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="fas fa-users-cog"></i> Kullanıcı Rolleri</h5>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div class="mb-3">
                            @for (int i = 0; i < Model.Count; i++)
                            {
                                <input type="hidden" asp-for="@Model[i].UserId" />
                                <input type="hidden" asp-for="@Model[i].RoleName" />
                                <input type="hidden" asp-for="@Model[i].RoleId" />

                                <div class="form-check mb-2">
                                    <input type="checkbox" asp-for="@Model[i].RoleExist" class="form-check-input" id="role_@i" />
                                    <label class="form-check-label" for="role_@i">@Model[i].RoleName</label>
                                </div>
                            }
                        </div>

                        <div class="text-end">
                            <button type="submit" class="btn btn-success">
                                <i class="fas fa-check-circle"></i> Rolleri Ata
                            </button>
                            <a href="/Admin/User/Index" class="btn btn-secondary ms-2">
                                <i class="fas fa-arrow-left"></i> Geri Dön
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
