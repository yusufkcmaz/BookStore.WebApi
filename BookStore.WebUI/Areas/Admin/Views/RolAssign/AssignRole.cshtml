@using BookStore.WebUI.Dtos.RoleDtos
@model List<RoleAssign>
@{
    ViewData["Title"] = "AssignRole";
    //Layout = "~/Views/AdminLayout/Layout.cshtml";
}

<form method="post">

    @for (int i = 0; i < Model.Count; i++)
    {
        <input type="hidden" asp-for=@Model[i].UserId />
        <input type="hidden" asp-for=@Model[i].RoleName />
        <input type="hidden" asp-for=@Model[i].RoleId />

        <div class="form-check">
            <input type="checkbox" asp-for="@Model[i].RoleExist" class="form-check-input" />

            <label class="form-check-label" for="@Model[i].RoleExist">@Model[i].RoleName</label>

        </div>
    }
    <button class="btn btn-outline-dark">Rolleri Ata</button>

</form>